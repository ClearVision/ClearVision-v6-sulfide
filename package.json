{
  "name": "clearvision",
  "description": "Highly customizable theme for BetterDiscord.",
  "private": true,
  "scripts": {
    "build": "sass --style=compressed --no-source-map -I . hljs.scss:public/hljs.css main.scss:public/main.css",
    "format": "prettier --write .",
    "test": "sass --style=expanded --no-source-map -I . hljs.scss:test/hljs.css main.scss:test/main.css",
    "addons": "sass --style=expanded --no-source-map scripts/cvstuff/main.scss:addons/main.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ClearVision/ClearVision-v6.git"
  },
  "author": "Zerthox",
