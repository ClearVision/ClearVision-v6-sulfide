    "nihaals",
    "OmgDani",
    "untuned",
    "xcruxiex"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ClearVision/ClearVision-v6/issues"
  },
  "homepage": "https://clearvision.github.io",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.8.8",
    "sass": "^1.83.4"
  }
}
